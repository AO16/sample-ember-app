<div class='container'>
  <div class='row'>
    {{#form-for
      (changeset model)
      classNames='form'
      submit=(route-action 'loginUser') as |f|
    }}
      <div class='col-xs-12'>
        <h2>Login</h2>
        <p>{{link-to 'Create an account' 'sign-up'}}</p>
        <div class='input-group'>
          {{f.email-field 'email' inputClasses='form-control'}}
        </div>
        <div class='input-group'>
          {{f.password-field 'password' inputClasses='form-control'}}
        </div>
        <div class='input-group'>
          <div class='btn-group'>
            {{f.submit 'Login' classNames='btn btn-primary btn-lg'}}
          </div>
        </div>
      </div>
    {{/form-for}}
  </div>
</div>