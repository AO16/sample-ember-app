<div class='container'>
  <div class='row'>
    {{#form-for
      (changeset model)
      classNames='form'
      submit=(route-action 'addUser') as |f|
    }}
      <div class='col-xs-12'>
        <h2>Sign up</h2>
        <p>Already have an account? Click {{link-to 'here' 'log-in'}} to login.</p>
        <div class='input-group'>
          {{f.text-field 'name' inputClasses='form-control'}}
        </div>
        <div class='input-group'>
          {{f.text-field 'email' inputClasses='form-control'}}
        </div>
        <div class='input-group'>
          {{f.password-field 'password' inputClasses='form-control'}}
        </div>
        <div class='input-group'>
          <div class='btn-group'>
            {{f.submit 'Sign up' classNames='btn btn-primary btn-lg'}}
          </div>
        </div>
      </div>
    {{/form-for}}
  </div>
</div>
